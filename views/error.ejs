<%- include ./partials/header.ejs %>
<%- include ./partials/navbar.ejs %>
<%- include ./partials/sidebar.ejs %>

<div class="wrapper">

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= error.status %> Error Page</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active"><%= error.status %> Error Page</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="error-page">
        <h2 class="headline <%= error.status == 500 ? 'text-danger' : 'text-warning' %>">
             <%= error.status %>
        </h2>

        <div class="error-content">
            <h3>
                <i class="fas fa-exclamation-triangle  <%= error.status == 500 ? 'text-danger' : 'text-warning' %>"></i> 
                Oops! Page <%= message %> .
            </h3>

          <p>
              Mohon maaf terjadi kesalahan, mohon periksa kembali  <br/>
              atau <a href="/dashboard">kembali ke halaman dashboard</a>
          </p>

        </div>
        <!-- /.error-content -->
      </div>
      <!-- /.error-page -->
    </section>
    <!-- /.content -->
  </div>
  
</div>

<%- include ./partials/footer.ejs %>
<%- include ./partials/js.ejs %>
  